{{ printf "<?xml version=\"1.0\" encoding=\"utf-8\" standalone=\"yes\" ?>" | safeHTML }}
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
    <channel>
        <title>{{ if .Page.Title }}{{ .Page.Title }} â€” Adam Havel{{ else }}{{ i18n "defaultTitle" }}{{ end }}</title>
        <link>{{ .Permalink }}</link>
        <description>{{ (.Site.GetPage "/").Summary | htmlUnescape | replaceRE "\n" " " }}</description>
        <language>{{ .Language }}</language>{{ if not .Date.IsZero }}
        <lastBuildDate>{{ .Date.Format "Mon, 02 Jan 2006 15:04:05 -0700" | safeHTML }}</lastBuildDate>{{ end }}
        {{ with .OutputFormats.Get "RSS" -}}
            {{ printf "<atom:link href=%q rel=\"self\" type=%q />" .Permalink .MediaType | safeHTML }}
        {{ end -}}
        {{ range .Pages -}}
            <item>
                <title>{{ .Title }}</title>
                <link>{{ .Permalink }}</link>
                <pubDate>{{ .Date.Format "Mon, 02 Jan 2006 15:04:05 -0700" | safeHTML }}</pubDate>
                <guid>{{ .Permalink }}</guid>
                <description>{{ .Summary | plainify | htmlUnescape }}</description>
            </item>
        {{ end -}}
    </channel>
</rss>